{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "functions": {
    "api/index.py": {
      "memory": 1024,
      "maxDuration": 60,
      "includeFiles": "ai_service/**"
    }
  },
  "rewrites": [
    { "source": "/InsightSuite/api/:path*", "destination": "/api/:path*" }
  ],
  "routes": [
    { "src": "/api/(health|reviews(?:/.*)?|jobs(?:/.*)?)", "dest": "/api/index.py" }
  ]
}
