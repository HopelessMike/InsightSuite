{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "functions": {
    "api/**/*.py": {
      "memory": 1024,
      "maxDuration": 60,
      "includeFiles": "ai_service/**"
    }
  },
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/index.py" },
    { "source": "/InsightSuite/api/:path*", "destination": "/api/index.py" }
  ]
}
