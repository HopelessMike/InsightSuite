{
  "builds": [
    { "src": "package.json", "use": "@vercel/next" },
    { "src": "api/index.py", "use": "@vercel/python" }
  ],
  "routes": [
    { "src": "/api/InsightChat", "continue": true },   // lascia gestire a Next (app/api/InsightChat/route.ts)
    { "src": "/api/(.*)", "dest": "/api/index.py" },   // tutto il resto delle API al backend Python
    { "src": "/health", "dest": "/api/index.py" },     // health check
    { "src": "/docs", "dest": "/api/index.py" },
    { "src": "/openapi.json", "dest": "/api/index.py" }
  ],
  "functions": {
    "api/index.py": { "maxDuration": 60, "memory": 1024 }
  }
}
